<div class="container mt-5">
  <p id="notice"><%= notice %></p>

  <div class="row mt-2">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="text-dark p-3 shadow">
        <p>
          <strong>Name:</strong>
          <%= @employee.name %>
        </p>

        <p>
          <strong>Unit:</strong>
          <%= @employee.unit %>
        </p>

        <p>
          <strong>Restaurant:</strong>
          <%= @employee.restaurant %>
        </p>
        <div class="text-center mt-2">
          <%= link_to 'Edit', edit_employee_path(@employee), class: 'btn btn-success' %> |
          <%= link_to 'Back', employees_path, class: 'btn btn-primary'%>
        </div>
      </div>
    </div>
  </div>
</div>
